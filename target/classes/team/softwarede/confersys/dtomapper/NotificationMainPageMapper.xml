<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="team.softwarede.confersys.dtomapper.GeneralNoticeMapper">
  <resultMap id="BaseResultMap" type="team.softwarede.confersys.dto.GeneralNoticeMapper">
    <id column="id" jdbcType="INTEGER" property="notificationId" />
    <result column="notification_type" jdbcType="VARCHAR" property="notificationType" />
    <result column="topic" jdbcType="VARCHAR" property="meetingTopic" />
  </resultMap>
  <sql id="Base_Column_List">
    id, notification_type, topic
  </sql>
 
 <select id="selectByNotificationId" resultMap="BaseResultMap">
 	select 
 	<include refid="Base_Column_List"/>
 	from notification n, meeting m 
 	where n.id=#{notificationId} 
 	and 
 	n.refer_id = m.id
 </select>